{
  "name": "@azure-utils/durable-functions",
  "version": "0.0.1",
  "type": "module",
  "description": "Utilities for Azure Durable functions.",
  "author": {
    "name": "Siddhant Gupta",
    "url": "https://guptasiddhant.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/guptasiddhant/azure-utils",
    "directory": "packages/azure-durable-functions"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/guptasiddhant/azure-utils/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "*.js",
    "*.d.ts"
  ],
  "keywords": [
    "azure",
    "functions",
    "durable",
    "entity",
    "orchestration",
    "activity",
    "entities",
    "orchestrations"
  ],
  "sideEffects": false,
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "internal": "./src/index.ts",
      "types": "./dist/esm/index.d.ts",
      "require": "./dist/cjs/index.js",
      "default": "./dist/esm/index.js"
    },
    "./entities-api": {
      "internal": "./src/durable-entities-api.ts",
      "types": "./dist/esm/durable-entities-api.d.ts",
      "require": "./dist/cjs/durable-entities-api.js",
      "default": "./dist/esm/durable-entities-api.js"
    },
    "./orchestrations-api": {
      "internal": "./src/durable-orchestrations-api.ts",
      "types": "./dist/esm/durable-orchestrations-api.d.ts",
      "require": "./dist/cjs/durable-orchestrations-api.js",
      "default": "./dist/esm/durable-orchestrations-api.js"
    }
  },
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "scripts": {
    "build": "yarn build:cjs & yarn build:esm & yarn exports-files",
    "build:cjs": "rm -rf cjs; tsc -p tsconfig.cjs.json",
    "build:esm": "rm -rf esm; tsc -p tsconfig.esm.json",
    "bump": "node ../../scripts/bump-version.mjs",
    "clear": "yarn exports-files clear; rm -rf coverage dist cjs esm & true",
    "exports-files": "node ../../scripts/exports-files.mjs",
    "jsr:publish": "npx -y jsr publish",
    "test": "vitest run --coverage",
    "test:server": "node ./tests/test-run.mjs",
    "test:watch": "vitest --coverage",
    "verify": "yarn clear; yarn test && yarn build"
  },
  "devDependencies": {
    "@internal/tsconfig": "*",
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^3.0.0",
    "typescript": "^5.8.0",
    "vitest": "^3.0.0"
  }
}
