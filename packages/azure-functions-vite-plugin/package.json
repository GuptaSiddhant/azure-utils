{
  "name": "@azure-utils/functions-vite-plugin",
  "version": "0.1.0",
  "type": "module",
  "description": "Vite plugin to build and verify Azure functions nodejs.",
  "author": {
    "name": "Siddhant Gupta",
    "url": "https://guptasiddhant.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/guptasiddhant/azure-utils",
    "directory": "packages/azure-functions-vite-plugin"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/guptasiddhant/azure-utils/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "azure",
    "functions",
    "vite",
    "plugin",
    "build",
    "verify",
    "validate",
    "typecheck"
  ],
  "sideEffects": false,
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "internal": "./src/index.ts",
      "types": "./dist/esm/index.d.ts",
      "require": "./dist/cjs/index.js",
      "default": "./dist/esm/index.js"
    }
  },
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "scripts": {
    "build": "yarn build:cjs & yarn build:esm",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "bump": "node ../../scripts/bump-version.mjs",
    "clear": "rm -rf coverage dist & true",
    "jsr:publish": "npx -y jsr publish",
    "test": "yarn --cwd 'tests' vite build",
    "test:skip-all": "yarn --cwd 'tests' vite build -- --skip-checks",
    "test:skip-typecheck": "TYPECHECK=false yarn --cwd 'tests' vite build",
    "test:skip-build-verify": "BUILD_VERIFY=false yarn --cwd 'tests' vite build",
    "verify": "yarn clear; yarn build"
  },
  "devDependencies": {
    "@internal/tsconfig": "*",
    "@types/node": "^22.0.0",
    "glob": "^10",
    "typescript": "^5.8.0",
    "vite": "^6"
  },
  "peerDependencies": {
    "glob": "*",
    "vite": "*"
  }
}
