{
  "name": "@azure-utils/feature-flags",
  "version": "0.1.12",
  "type": "module",
  "description": "Fetch and validate feature flags managed via Azure App Configuration.",
  "author": {
    "name": "Siddhant Gupta",
    "url": "https://guptasiddhant.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/guptasiddhant/azure-utils",
    "directory": "packages/azure-feature-flags"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/guptasiddhant/azure-utils/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "*.js",
    "*.d.ts"
  ],
  "keywords": [
    "azure",
    "feature",
    "flag",
    "flags",
    "configuration",
    "config",
    "validate",
    "parse",
    "app",
    "rollout",
    "percentage"
  ],
  "sideEffects": false,
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "internal": "./src/index.ts",
      "types": "./dist/esm/index.d.ts",
      "require": "./dist/cjs/index.js",
      "default": "./dist/esm/index.js"
    },
    "./allocate": {
      "internal": "./src/allocate.ts",
      "types": "./dist/esm/allocate.d.ts",
      "require": "./dist/cjs/allocate.js",
      "default": "./dist/esm/allocate.js"
    },
    "./client": {
      "internal": "./src/client.ts",
      "types": "./dist/esm/client.d.ts",
      "require": "./dist/cjs/client.js",
      "default": "./dist/esm/client.js"
    },
    "./rollout": {
      "internal": "./src/rollout.ts",
      "types": "./dist/esm/rollout.d.ts",
      "require": "./dist/cjs/rollout.js",
      "default": "./dist/esm/rollout.js"
    },
    "./service": {
      "internal": "./src/service.ts",
      "types": "./dist/esm/service.d.ts",
      "require": "./dist/cjs/service.js",
      "default": "./dist/esm/service.js"
    },
    "./validate": {
      "internal": "./src/validate.ts",
      "types": "./dist/esm/validate.d.ts",
      "require": "./dist/cjs/validate.js",
      "default": "./dist/esm/validate.js"
    },
    "./types": {
      "internal": "./src/types.ts",
      "types": "./dist/esm/types.d.ts",
      "require": "./dist/cjs/types.js",
      "default": "./dist/esm/types.js"
    }
  },
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "scripts": {
    "build": "yarn build:cjs & yarn build:esm & yarn exports-files",
    "build:cjs": "rm -rf cjs; tsc -p tsconfig.cjs.json",
    "build:esm": "rm -rf esm; tsc -p tsconfig.esm.json",
    "bump": "node ../../scripts/bump-version.mjs",
    "clear": "yarn exports-files clear; rm -rf coverage dist cjs esm & true",
    "exports-files": "node ../../scripts/exports-files.mjs",
    "jsr:publish": "npx -y jsr publish",
    "test": "vitest run --coverage",
    "test:server": "node ./tests/test-run.mjs",
    "test:watch": "vitest --coverage",
    "verify": "yarn clear; yarn test && yarn build"
  },
  "devDependencies": {
    "@internal/tsconfig": "*",
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^3.0.0",
    "typescript": "^5.8.0",
    "vitest": "^3.0.0"
  }
}
